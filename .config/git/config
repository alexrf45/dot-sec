	br = branch
	brd = branch -d
	brD = branch -D
  merged = branch --merged
  sl = stash list
  sa = stash apply
  ss = stash save
	st = status
	aa = add -A .
	cm = commit -m
	aacm = !git add -A . && git commit
	aacm = !git add -A . && git commit -m
  logs = log --show-signature
  fl = log -u
  gl = config --global -l
